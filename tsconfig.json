{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [ "src" ],
  "exclude": [ "*.test.*" ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [ "esnext" ],
    "jsx": "react",
    "strict": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "executors/*": ["src/executors/*"],
      "projects/*": ["src/projects/*"],
      "scripts/*": ["src/scripts/*"],
      "utils/*": ["src/utils/*"],
      "types": ["src/types.ts"]
    }
  }
}